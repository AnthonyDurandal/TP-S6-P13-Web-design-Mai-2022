{% extends 'base.html.twig' %}

{% block title %}
    articles-rechauffement-climatique-actu
{% endblock %}

{% block header %}
	articles-rechauffement-climatique-actu
{% endblock %}


{% block body %}
    {% for article in articles %}
    <div class="col-md-12 blog-post" style='display:inline;margin-top:50px;'>
            <div class="post-title" style='margin-top:10px'>
            <h2>
                <a href="{{ article.urlPath }}">{{ article.header }}</a>
            </h2>

            </div>

            <div class="post-info">
            <span>Article du {{ article.createdAt |format_datetime(locale='fr') }} Ã©crit par {{ article.authorName }}</span>



            </div>
            <p>{{ article.sumUp | raw }}</p>
            <span style='display: flex;align-items: center;'>
                {# lire:<a href="{{ article.urlPath }}" class="button button-style button-anim fa fa-long-arrow-right">{{ article.header }}</a> #}
                lire:<a href="{{ article.category.entitled }}/{{ article.urlPath }}_{{ article.id }}.html" class="button button-style button-anim fa fa-long-arrow-right">{{ article.header }}</a>
                
            </span>
        </div>
    {% endfor %}

{% endblock %}


